<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".FoodOptionsActivity">

    <Button
        android:id="@+id/btn_feedSnack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Snack"
        android:background="@drawable/button_shape"
        android:onClick="feedSnack"/>

    <Button
        android:id="@+id/btn_feedMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="20dp"
        android:text="Meal"
        android:background="@drawable/button_shape"
        android:onClick="feedMeal"/>

    <Button
        android:id="@+id/btn_feedKingSized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="King Sized Meal"
        android:background="@drawable/button_shape"
        android:onClick="feedKingsizedMeal"/>
</LinearLayout>